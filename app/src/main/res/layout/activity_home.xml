<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <EditText
        android:id="@+id/etxt_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter URL"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Go"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_wiki"
        android:layout_marginTop="201dp"
        android:background="@drawable/gl2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_fb"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignTop="@+id/btn_google"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fb2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_ytube"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/btn_gmail"
        android:layout_alignTop="@+id/btn_fb"
        android:background="@drawable/youtube"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_wiki"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_yahoo"
        android:layout_marginStart="37dp"
        android:background="@drawable/wiki"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_yahoo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="147dp"
        android:background="@drawable/yahoo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_gmail"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_wiki"
        android:layout_marginEnd="41dp"
        android:background="@drawable/gmail" />

</RelativeLayout>